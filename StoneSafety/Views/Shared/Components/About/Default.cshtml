                        <li>@ViewBag.settings["İG1"]</li>
                        <li>@ViewBag.settings["İG2"]</li>
                        <li>@ViewBag.settings["İG3"]</li>
                        <li>@ViewBag.settings["İG4"]</li>
                        <li>@ViewBag.settings["İG5"]</li>
                        <li>@ViewBag.settings["İG6"]</li>
                        <li>@ViewBag.settings["İG7"]</li>
                        <li>@ViewBag.settings["İG8"]</li>
