@model StoneSafety.ViewModels.SubCategories.SubCategoryEditVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit SubCategory</h1>

<hr />
<form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label for="Name">Name</label>
        <input autocomplete="off" asp-for="Name" class="form-control" id="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="CategoryId">Category</label>
        <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control" id="CategoryId">
            <option value="">Select Category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary me-2 mt-3">Submit</button>
    <a class="btn btn-light mt-3" asp-action="Index">Cancel</a>
</form>
