@model StoneSafety.ViewModels.Products.ProductDetailVM

<div class="card m-auto w-75">
    <div class="card-body">
        <h4 class="card-title">Product Detailed View</h4>

        <div class="mb-3">
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Back to Product List</a>
        </div>

        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div class="row mt-3">
                <div class="col-12 pr-1">
                    <img src="@Url.Content($"~/assets/images/{Model.Image}")" class="mb-2 mw-100 w-100 rounded" alt="Product Image" style="height:300px;" />
                </div>
            </div>
        }

        @if (Model.Images != null && Model.Images.Any())
        {
            <div class="row mt-3">
                @foreach (var img in Model.Images)
                {
                    <div class="col-3 pr-1">
                        <img src="@Url.Content($"~/assets/images/{img}")" class="mb-2 mw-100 w-100 rounded" alt="Product Image" style="height:100px;" />
                     
                    </div>
                }
            </div>
        }

        <div class="mb-0 mt-3 flex-grow d-flex">
            <p class="mb-0 font-weight-light"><strong>Name: </strong>@Model.Name</p>
        </div>
        <div class="mb-0 mt-3 flex-grow d-flex">
            <p class="mb-0 font-weight-light"><strong>Price: </strong>$ @Model.Price</p>
        </div>
        <div class="mb-0 mt-3 flex-grow d-flex">
            <p class="mb-0 font-weight-light"><strong>Subcategory: </strong>@Model.SubCategoryName</p>
        </div>
        <div class="mb-0 mt-3 flex-grow d-flex">
            <p class="mb-0 font-weight-light"><strong>Subsubcategory: </strong>@Model.SubSubCategoryName</p>
        </div>
        <div class="mb-0 mt-3 flex-grow d-flex">
            <p class="mb-0 font-weight-light"><strong>Rating: </strong>@Model.Rating</p>
        </div>
        <div class="mb-0 mt-3 flex-grow d-flex">
            <p class="mb-0 font-weight-light"><strong>Create date: </strong>@Model.CreatedDate</p>
        </div>
        <div class="mb-0 mt-3 flex-grow d-flex">
            <p class="mb-0 font-weight-light"><strong>Update date: </strong>@Model.UpdatedDate</p>
        </div>
    </div>
</div>
