@model StoneSafety.ViewModels.SubSubCategories.SubSubCategoryEditVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Sub-SubCategory</h1>

<hr />

<form class="forms-sample" method="post" asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label>Name</label>
        <input autocomplete="off" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>SubCategory</label>
        <select asp-for="SubCategoryId" asp-items="Model.SubCategories" class="form-control">
            <option value="">Select a SubCategory</option>
        </select>
        <span asp-validation-for="SubCategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary me-2 mt-3">Submit</button>
    <a class="btn btn-light mt-3" asp-action="Index">Cancel</a>
</form>
